Conditional Example 2.1

void setup(){

  size(100,100);
  noStroke();
  fill(0);
  
}

void draw(){
  background(255);  
  if (mouseX < width/2){
  
  rect(0,0,width/2,height);
  
  }else{
    rect(width/2,0,width/2,height);
  }
}
  
****************************


void setup(){

  size(100,100);
  noStroke();
  fill(0);
  
}

void draw(){
  background(204);  
  if (mouseX < 50)
  {
  
  rect(0,0,50,100);
  
  }
  else
  {
    rect(50,0,50,100);
  }
}
  
